#!/bin/bash

if [ "$(hostname)" == "bench-hdd-1" ]; then
  HOSTNAME=ccl-bench-hdd-1
else
  HOSTNAME=unknown
fi

IBD_PEER_ADDRESS=localhost:9000 \
  CODESPEED_USER=root \
  CODESPEED_PASSWORD=foobar00 \
  CODESPEED_ENV_NAME="$HOSTNAME" \
  CODESPEED_URL=http://localhost:8000 \
  BITCOIND_STOPATHEIGHT=100000 \
  ./runner/run_bench.py
